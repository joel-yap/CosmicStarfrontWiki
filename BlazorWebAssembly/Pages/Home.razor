@page "/"
@using BlazorWebAssembly.Models
@using BlazorWebAssembly.Services

<PageTitle>@HOME_TITLE</PageTitle>

<h1>Cosmic Starfront Wiki</h1>

<p>Welcome to the official Cosmic Starfront Wiki, the official resource for the game.</p>

@if (Panels != null) {
    <div class="flex1">
        @foreach (var panel in Panels)
        {
            if (panel.Box == 0) {
                <div class="flex2">
                    <img src=@panel.Image />
                    <a href=@panel.Link>@panel.Name</a>
                </div>
            }
        }
    </div>
}

@if (Panels != null)
{
    <div class="flex1">
        @foreach (var panel in Panels)
        {
            if (panel.Box == 1)
            {
                <div class="flex2">
                    <img src=@panel.Image />
                    <a href=@panel.Link>@panel.Name</a>
                </div>
            }
        }
    </div>
}

<div class="flex1">
    News
</div>

<div class="flex1">
    Links
</div>

